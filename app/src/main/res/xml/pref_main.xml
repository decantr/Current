<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="@string/defaultchoice"
        android:entries="@array/pref_cat_or_source"
        android:entryValues="@array/pref_cat_or_source_val"
        android:key="cat_or_source"
        android:summary="Choose either catagory or source"
        android:title="Category or Source" />
    <ListPreference
        android:defaultValue="@string/default_cat"
        android:entries="@array/pref_cat"
        android:entryValues="@array/pref_cat_val"
        android:key="cat"
        android:summary="Choose which category will be displayed"
        android:title="@string/cat" />
    <ListPreference
        android:defaultValue="@string/default_source"
        android:entries="@array/pref_source"
        android:entryValues="@array/pref_source_val"
        android:key="source"
        android:summary="Choose which source will be displayed"
        android:title="Choose Source" />
</PreferenceScreen>